{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "文心雕龙",
  "version": "2.0.0",
  "identifier": "com.paper-polisher.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "文心雕龙",
        "width": 900,
        "height": 680
      }
    ],
    "security": {
      "csp": null
    },
    "android": {
      "package": "com.paperpolisher.app",
      "minSdkVersion": 24,
      "targetSdkVersion": 33
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "shortDescription": "论文润色工具",
    "longDescription": "文心雕龙是一个专业的论文润色和修改工具",
    "externalBin": [],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ]
      }
    },
    "android": {
      "icon": "icons/icon.png",
      "versionCode": 200,
      "minSdkVersion": 24,
      "targetSdkVersion": 33,
    }
  }
}